<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogErrorStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#F44336</item>
    </style>

    <style name="AlertDialogWarningStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#FFC107</item>
    </style>

    <style name="AlertDialogSuccessStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#4CAF50</item>
    </style>

    <style name="AlertDialogInfoStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#03A9F4</item>
    </style>


    <style name="dict_word_list_text" parent="@android:style/TextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="float_word_list_text" parent="@android:style/TextAppearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="mean_header_text" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="hf_word_list_text" parent="@android:style/TextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="hf_time_list_text" parent="@android:style/TextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="download_hint_list_text" parent="@android:style/TextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="settings_header_text" parent="@android:style/TextAppearance">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="settings_main_text" parent="@android:style/TextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="settings_sub_text" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="head_bubble_text" parent="@android:style/TextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="listview_index" parent="@android:style/TextAppearance">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="listview_main" parent="@android:style/TextAppearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="listview_second" parent="@android:style/TextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="listview_second_up" parent="@android:style/TextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="listview_second_down" parent="@android:style/TextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/red</item>
    </style>
</resources>
